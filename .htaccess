<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Protect sensitive files
  <FilesMatch "\.(env|json|config|md|lock|gitignore|htaccess|xml|yml|log)$">
    Order allow,deny
    Deny from all
  </FilesMatch>

  # Serve existing files (assets)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Serve existing directories
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ðŸš« Don't rewrite for JS, CSS, map files, etc.
  RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|svg|ico|json|map)$ [NC]

  # All other requests â†’ index.html (Vue handles routing)
  RewriteRule ^ index.html [L]
</IfModule>
