<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

# Protect sensitive files (industry standard)

<FilesMatch "\.(env|json|config|md|lock|gitignore|htaccess|xml|yml|log)$">
Order allow,deny
Deny from all
</FilesMatch>

# Serve existing files (assets)

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Serve existing directories

RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# All other requests â†’ index.html (Vue handles routing)

RewriteRule ^ index.html [L]
</IfModule>
